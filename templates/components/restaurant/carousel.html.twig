<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		{% for key, restaurant in restaurants %}
			{% if key == 0 %}
				<li data-target="#carouselExampleIndicators" data-slide-to="{{ key }}" class="active"></li>
			{% else %}
				<li data-target="#carouselExampleIndicators" data-slide-to="{{ key }}"></li>
			{% endif %}
		{% endfor %}
	</ol>
	<div class="carousel-inner">
		{% for key, restaurant in restaurants %}
			{% if key == 0 %}
				<div class="carousel-item active" style="overflow: hidden; height: 50vh;">
					<img class="d-block w-100" src="{{ restaurant.picture }}" alt="{{ restaurant.name }}">
				</div>
			{% else %}
				<div class="carousel-item" style="overflow: hidden; height: 50vh;">
					<img class="d-block w-100" src="{{ restaurant.picture }}" alt="{{ restaurant.name }}">
				</div>
			{% endif %}
		{% endfor %}
	</div>
	<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
