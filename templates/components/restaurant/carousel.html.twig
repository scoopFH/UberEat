<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		{% for key, restaurant in restaurants %}
			{% if key == 0 %}
				<li data-target="#carouselExampleIndicators" data-slide-to="{{ key }}" class="active"></li>
			{% else %}
				<li data-target="#carouselExampleIndicators" data-slide-to="{{ key }}"></li>
			{% endif %}
		{% endfor %}
	</ol>
	<div class="carousel-inner">
		{% for key, restaurant in restaurants %}
			{% if key == 0 %}
				{# <a href="{{ path('restaurant_description', {'id': restaurant.id}) }}"> #}
				<div class="carousel-item active" style="overflow: hidden;">
					<img class="d-block w-100" style="object-fit: cover;" src="{{ restaurant.promotion }}" alt="{{ restaurant.name }}">
				</div>
				{# </a> #}
			{% else %}
				{# <a href="{{ path('restaurant_description', {'id': restaurant.id}) }}"> #}
				<div class="carousel-item" style="overflow: hidden;">
					<img class="d-block w-100" style="object-fit: cover;" src="{{ restaurant.promotion }}" alt="{{ restaurant.name }}">
				</div>
				{# </a> #}
			{% endif %}
		{% endfor %}
	</div>
	<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
