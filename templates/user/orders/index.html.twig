{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Order index
{% endblock %}

{% block body %}
	<h1>Order index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Delivery_date</th>
				<th>Dishes</th>
				<th>State</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for order in orders %}
				<tr>
					<td>{{ order.deliveryDate ? order.deliveryDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						{% for orderDish in order.orderDishes %}
							{{ orderDish.quantity }}
							{{ orderDish.dish.name }}
							<p></p>
						{% endfor %}
					</td>
					<td>{{ order.state }}</td>
					<td>
						<a href="{{ path('order_comment', {'id': order.id}) }}">add commentary</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
