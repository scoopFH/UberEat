{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Order
{% endblock %}

{% block body %}
	<h1>Order</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ order.id }}</td>
			</tr>
			<tr>
				<th>Delivery_date</th>
				<td>{{ order.deliveryDate ? order.deliveryDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Order commentary</th>
				<caption class="d-flex flex-column" style="margin-left: 10%;">
					<p>message : {{ order.commentary.message }}
					</p>
					<p>send the {{ order.commentary.sendDate ? order.deliveryDate|date('Y-m-d H:i:s') : '' }}
					</p>
				</caption>
			</tr>
			<tr>
				<th>Dishes</th>
				<td></td>
				{% for orderDish in order.orderDishes %}
					<td>
						{{ orderDish.quantity }}
						{{ orderDish.dish.name }}
						<p></p>
					</td>
				{% endfor %}
			</tr>
		</tbody>
	</table>

	<a href="{{ path('order_index') }}">back to list</a>

	<a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>

	{{ include('admin/order/_delete_form.html.twig') }}
{% endblock %}
